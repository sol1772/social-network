<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>com.getjavajob.training.maksyutovs.socialnetwork.web.listeners.AppContextListener
        </listener-class>
    </listener>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.getjavajob.training.maksyutovs.socialnetwork.web.filters.AuthenticationFilter</filter-class>
        <init-param>
            <param-name>authorizationUrls</param-name>
            <param-value>/, /login, /login.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.LoginServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.LogoutServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>account-list</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.AccountListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>account-list</servlet-name>
        <url-pattern>/accounts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>account</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>account</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>account-edit</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.AccountEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>account-edit</servlet-name>
        <url-pattern>/account-edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>group</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.GroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>group</servlet-name>
        <url-pattern>/group</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>group-add</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.GroupAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>group-add</servlet-name>
        <url-pattern>/group-add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>group-edit</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.GroupEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>group-edit</servlet-name>
        <url-pattern>/group-edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>messages</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.MessagesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>messages</servlet-name>
        <url-pattern>/messages</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>message</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.MessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>message</servlet-name>
        <url-pattern>/message</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>messages_account</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.MessagesAccountServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>messages_account</servlet-name>
        <url-pattern>/messages_account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ErrorHandler</servlet-name>
        <servlet-class>com.getjavajob.training.maksyutovs.socialnetwork.web.servlets.ErrorHandlerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorHandler</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/error</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error</location>
    </error-page>

    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>

    <resource-ref>
        <res-ref-name>jdbc/socnet</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>